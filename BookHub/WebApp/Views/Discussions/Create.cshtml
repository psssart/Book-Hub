@using System.Security.Claims
@model App.Domain.Entities.Discussion

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Discussion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookId" class="control-label">Book</label>
                <select asp-for="BookId" class="form-control" asp-items="ViewBag.BookId">
                    <option value="">Select Book</option>
                </select>
            </div>
            
            <div class="form-group">
                <label asp-for="GenreId" class="control-label">Genre</label>
                <select asp-for="GenreId" class="form-control" asp-items="ViewBag.GenreId">
                    <option value="">Select Genre</option>
                </select>
            </div>
            
            <div class="form-group">
                <label asp-for="AuthorId" class="control-label">Author</label>
                <select asp-for="AuthorId" class="form-control" asp-items="ViewBag.AuthorId">
                    <option value="">Select Author</option>
                </select>
            </div>
            
            @* Select current user *@
            <input asp-for="AppUserId" class="form-control" type="hidden" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)"/>
            
            <div class="form-group">
                <label asp-for="Tittle" class="control-label"></label>
                <input asp-for="Tittle" class="form-control" />
                <span asp-validation-for="Tittle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="imageData" class="control-label">Image</label>
                <input asp-for="imageData" class="form-control" type="file" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
